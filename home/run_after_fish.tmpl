{{- if eq .chezmoi.os "darwin" -}}
#!/opt/homebrew/bin/fish

source ~/.config/fish/config.fish
for file in ~/.config/fish/conf.d/**/*.fish
    source $file
end

{{- else if eq .chezmoi.os "linux" -}}
#!/home/linuxbrew/.linuxbrew/bin/fish

source ~/.config/fish/config.fish
for file in ~/.config/fish/conf.d/**/*.fish
    source $file
end

{{- end -}}

